{
  "manifest_version": 3,
  "name": "ComfortReader",
  "version": "1.0",
  "description": "A comfortable PDF reading experience.",
  "permissions": ["activeTab", "storage", "downloads", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_title": "ComfortReader Settings",
      "default_popup": "options/options.html"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
      {
          "resources": ["viewer/viewer.html"],
          "matches": ["<all_urls>"]
      }
  ],
  "content_security_policy": {
      "extension_pages": "script-src 'self'; style-src 'self' https://cdnjs.cloudflare.com 'unsafe-inline'; font-src 'self' https://cdnjs.cloudflare.com; child-src 'self' blob:;"
  }
}